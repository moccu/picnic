<!doctype html>
<html>
	<head>
		<meta charset="utf-8" />
		<title>Testrunner</title>
		<link rel="stylesheet" href="/libs/qunit/qunit.css" />

		<!-- PhantomJS doesn't support ES5 features. Add Shim to fix this issue... -->
		<script type="text/javascript" src="/libs/es5shim/es5shim.js"></script>

		<!-- Add Qunit and SinonJS test core -->
		<script type="text/javascript" src="/libs/qunit/qunit.js"></script>
		<script type="text/javascript" src="/libs/sinon/sinon.js"></script>
		<script type="text/javascript" src="/libs/sinon/sinon.qunit.js"></script>

		<!-- Add SystemJs and configuration -->
		<script type="text/javascript" src="/jspm_packages/system.js"></script>
		<script type="text/javascript" src="/config.js"></script>

		<!-- Gettext mock -->
		<script type="text/javascript">
			window.gettext = window.gettext ||Â function(label) {
				return label;
			};
		</script>

		<!-- Load tests -->
		<script type="text/javascript">
			QUnit.config.autostart = false;
			Promise.all([{{#each tests}}
				System.import('{{ this }}'){{#unless @last }},{{/unless}}{{/each}}
			]).then(function() {
				QUnit.start();
			});
		</script>
	</head>
	<body>
		<div id="qunit"></div>
		<div id="qunit-fixture"></div>
	</body>
</html>
